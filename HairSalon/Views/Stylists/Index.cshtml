@{Layout = "_Layout";}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Here are all of your stylists:</h1>

@if (@Model.Count == 0)
{
  <h3>@Html.ActionLink("Please Add a Stylist", "Create")</h3>
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</li>
  }
</ul>
<hr>
<p>@Html.ActionLink("New Stylist", "Create")</p>