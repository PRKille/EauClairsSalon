@{Layout = "_Layout";}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Here are all of your stylists:</h1>

@if (@Model.Count == 0)
{
  <h3>@Html.ActionLink("Please Add a Stylist", "Create", null, null, new {@class = "btn btn-secondary btn-sm"})</h3>
}

  @foreach (Stylist stylist in Model)
  {
    <div class="card col-md-3">
      <div class="card-body">
        <h4 class="card-title">@stylist.Name</h4>
        <p>@Html.ActionLink("View Details", "Details", new {id = stylist.StylistId}, new {@class = "btn btn-secondary btn-sm"})</p>
      </div>
    </div>
  }

<hr>
<p>@Html.ActionLink("New Stylist", "Create", null, null, new { @class = "btn btn-dark btn-large" })</p>