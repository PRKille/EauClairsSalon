@{Layout = "_Layout";}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>You have no clients!</h3>
  <h4>Better get on that!</h4>
} 

@foreach (Client client in Model)
{
  <p>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }, new {@class = "btn btn-secondary btn-sm"}) | @client.Stylist.Name</p>
}